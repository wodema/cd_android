<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_company_position"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_weight="1"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/item_company_position_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动策划实习生"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_company_position_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="1人"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/item_company_position_require"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="本科"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/item_company_position_city_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作城市："
                    android:textColor="#938F8F"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_company_position_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="广州市"
                    android:textColor="#938F8F"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_company_position_salary_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="薪资："
                    android:textColor="#938F8F"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_company_position_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="15k"
                    android:textColor="#938F8F"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/item_company_position_major_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业要求："
                    android:textColor="#938F8F"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/item_company_position_label"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="软件工程软件工程软件工程软件工程软件工程软件工程软件工程"
                    android:textColor="#938F8F"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f3f3f3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/btn_company_position_edit"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_button"
                    android:text="修改"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/btn_company_position_delete"
                    android:textColor="@color/black"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/circle_button"
                    android:text="删除"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>