<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_card_student_info"
        android:background="#358EFA"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="5dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="头 像"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:clickable="true"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="4dp"
                        android:id="@+id/img_student_avatar"
                        android:scaleType="centerCrop"
                        app:roundPercent="1"
                        android:src="@drawable/company"
                        android:focusable="true" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/edit_student_name"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入姓名"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/edit_student_mobile"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:hint="请输入手机号"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/edit_student_email"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入邮箱"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/edit_student_school"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入学校"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/edit_student_major"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入专业"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="毕业年份"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        style="@style/TextAppearance.AppCompat"
                        android:id="@+id/text_student_graduationDate"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:hint="请选择毕业年份"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f3f3"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_student_upload_resume"
        android:textColor="@color/white"
        android:background="@drawable/circle_button"
        app:layout_constraintTop_toBottomOf="@id/ll_card_student_info"
        app:layout_constraintBottom_toTopOf="@id/btn_student_upload_resume"
        android:textSize="17dp"
        android:text="上传简历附件"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_student_preview_resume"
        android:textColor="@color/white"
        android:background="@drawable/circle_button"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@id/btn_student_upload_resume"
        app:layout_constraintTop_toBottomOf="@id/ll_card_student_info"
        android:textSize="17dp"
        android:text="预览简历附件"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_student_info_save"
        android:textColor="@color/white"
        android:background="@drawable/circle_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="17dp"
        android:text="保存"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

</androidx.constraintlayout.widget.ConstraintLayout>