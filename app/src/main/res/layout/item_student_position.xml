<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_company_position_card"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_weight="1"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/ll_student_position_info">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:clickable="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:id="@+id/item_company_logo"
                android:scaleType="centerCrop"
                app:roundPercent="1"
                android:src="@drawable/company_logo"
                tools:ignore="ImageContrastCheck"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/item_student_position_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动策划实习生"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_student_position_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:text="1人"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/item_student_position_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:text="本科"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/item_student_position_city_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作城市："
                        android:textColor="#938F8F"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/item_student_position_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="广州市"
                        android:textColor="#938F8F"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/item_student_position_salary_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="薪资："
                        android:textColor="#938F8F"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/item_student_position_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="15k"
                        android:textColor="#938F8F"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/item_student_position_major_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业要求："
                        android:textColor="#938F8F"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_student_position_major"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="软件工程软件工程软件工程软件工程软件工程软件工程软件工程"
                        android:textColor="#938F8F"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>